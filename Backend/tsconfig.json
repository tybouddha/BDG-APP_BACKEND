{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "types": ["node", "express", "jest"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "app.ts"], // ‚Üê Assure-toi d'inclure "src"
  "exclude": ["node_modules", "dist"]
}
